---
import { useTranslation } from '../../i18n';

interface Props {
  title: string;
  slug: string;
  summary: string;
  date: Date;
  tags: string[];
}
const { title, slug, summary, date, tags } = Astro.props;
const t = useTranslation(Astro.locals.locale);
---

<li>
  <h4 class="text-xl font-mono">{title}</h4>
  <p class="text-sm text-foreground/70 lowercase">
    <date>
      {
        date.toLocaleString(Astro.locals.locale, {
          month: "long",
          day: "numeric",
          year: "numeric",
        })
      }
    </date>
    - {tags.join(", ")}
  </p>
  <p class="text-sm sm:text-md mt-1 sm:mt-0">{summary}</p>
  <a
    class="text-sm text-accent relative after:absolute after:w-0 after:-bottom-0 hover:after:w-full after:h-px after:bg-accent after:left-0"
    href={`/blog/${slug}`}
  >
    {t('components.items.more')}
  </a>
</li>
