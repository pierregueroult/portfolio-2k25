---
interface Props {
  title: string;
  slug: string;
  summary: string;
  date: Date;
  tags: string[];
}
const { title, slug, summary, date, tags } = Astro.props;
---

<li>
  <h4 class="text-xl font-mono">{title}</h4>
  <p class="text-sm text-foreground/60 lowercase">
    <date>
      {
        date.toLocaleString("en-US", {
          month: "long",
          day: "numeric",
          year: "numeric",
        })
      }
    </date>
    - {tags.join(", ")}
  </p>
  <p class="text-md">{summary}</p>
  <a
    class="text-sm text-accent relative after:absolute after:w-0 after:-bottom-0 hover:after:w-full after:h-px after:bg-accent after:left-0"
    href={`/blog/${slug}`}
  >
    Read more
  </a>
</li>
