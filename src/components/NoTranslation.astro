---
import { useTranslation } from "../i18n";
import TranslationAlert from "./TranslationAlert.astro";

const t = useTranslation(Astro.locals.locale);
---

{
  Astro.locals.locale !== "en" && (
    <TranslationAlert title={t("components.noTranslation.title")} text={t("components.noTranslation.text")} />
  )
}
