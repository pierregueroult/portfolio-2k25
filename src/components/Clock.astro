---
const clockContent: string = new Date().toLocaleTimeString("en-GB");
---

<date data-clock>
  {clockContent}
</date>

<script>
  const clock = document.querySelector("[data-clock]");
  const updateClock = () => {
    if (!clock) return;
    // 18:00:20 format
    clock.textContent = new Date().toLocaleTimeString("en-GB");
    setTimeout(updateClock, 1000);
  };
  updateClock();
</script>
