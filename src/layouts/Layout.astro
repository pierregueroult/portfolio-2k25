---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";
import { SITE } from "../consts";

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  isForMarkdown?: boolean;
}

const { theme } = Astro.locals;

const { title, description, keywords, isForMarkdown } = Astro.props;
const defaultKeywords: string[] = [
  "software developer",
  "coding projects",
  "development",
  "programming",
  "social media",
  "Pierre developer",
  "tech projects",
  "developer portfolio",
  "web developer",
  "Python",
  "JavaScript",
  "GitHub",
  "LinkedIn",
  "personal development",
];
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <title>Pierre Guéroult - {title}</title>
    <meta charset="utf-8" />
    <meta name="author" content="Pierre Guéroult" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content={keywords ? keywords.join(", ") : defaultKeywords.join(", ")} />
    <meta name="og:title" content={title} />
    <meta name="og:type" content="website" />
    <meta name="og:description" content={description} />
    <meta name="og:url" content={SITE} />
    <meta name="og:image" content="TODO" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="TODO" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
    <link rel="preload" href="/assets/fonts/Geist[wght].woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/assets/fonts/GeistMono[wght].woff2" as="font" type="font/woff2" crossorigin>
  </head>
  <body class="font-mono bg-background text-foreground" data-theme={theme}>
    <Header />
    <main class={`mx-auto max-w-4xl w-full px-4 ${isForMarkdown ? "mt-4" : ""}`}>
      <slot />
    </main>
  </body>
</html>
